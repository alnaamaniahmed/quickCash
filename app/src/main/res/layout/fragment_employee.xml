<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="397dp"
        android:layout_height="33dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:text="Welcome, "
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />

    <TextView
        android:id="@+id/appliedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="144dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="147dp"
        android:text="Job Applications"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/appliedScrollView"
        android:layout_width="250dp"
        android:layout_height="262dp"
        android:layout_below="@id/appliedLabel"
        android:layout_marginBottom="212dp"
        android:background="@drawable/rounded_corners_gold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appliedLabel"
        app:layout_constraintVertical_bias="0.809">

        <LinearLayout
            android:id="@+id/appliedList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Dynamic List Items will be added here -->
            <!-- Dummy List Item 1 -->

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/findJobButton"
        android:layout_width="150dp"
        android:layout_height="64dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/cash_green_dark"
        android:text="@string/FIND_JOB"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appliedScrollView" />

</androidx.constraintlayout.widget.ConstraintLayout>